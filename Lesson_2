import java.util.Arrays;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        printThreeWords();
        checkSumSign();
        printColor();
        compareNumbers();
        checkTrue();
        checkSign();
        checkNotTrue();
        manyLine();
        isLeapYear();
        reverse();
        fill();
        multiplication();
        matrix();
        myArray();
    }
    public static void printThreeWords()
    {
        System.out.println("метод printThreeWords()");
        System.out.println("Orange");
        System.out.println("Banana");
        System.out.println("Apple");
        System.out.println();
    }

    public static void checkSumSign()
    {
        System.out.println("метод checkSumSign()");
        int a=-20,b=15;
        int c= a + b;
        if (c>=0) System.out.println("Сумма положительная");
        else System.out.println("Сумма отрицательная");
        System.out.println();
    }

    public static void printColor()
    {
        System.out.println("метод printColor()");
        int value=101;
        if (value <=0) System.out.println("Красный");
        else if (value >0 && value<=100) System.out.println("Желтый");
        else System.out.println("Зеленый");
        System.out.println();
    }

    public static void  compareNumbers()
    {
        System.out.println("метод compareNumbers()");
        int a=1,b=2;
        if (a>=b)  System.out.println("a >= b");
        else System.out.println("a < b");
        System.out.println();
    }

    private static boolean checkTrue()
    {
        System.out.println("Проверка, что сумма лежит в пределах от 10 до 20");
        Scanner console = new Scanner(System.in);
        int a = console.nextInt();
        int b = console.nextInt();

        int c = a + b;
        if (c >=10 && c <= 20) {
            System.out.println("true");
            System.out.println();
            return true;

        } else {
            System.out.println("false");
            System.out.println();
            return false;
        }
    }

    public static void checkSign()
    {
        System.out.println("Положительное ли число передали или отрицательное");
        Scanner console = new Scanner(System.in);
        int a = console.nextInt();

        if (a>=0) System.out.println("Число положительное");
        else System.out.println("Число отрицательное");
        System.out.println();
    }

    private static boolean checkNotTrue()
    {
        System.out.println("Отрицательное ли число передали или положительное");
        Scanner console = new Scanner(System.in);
        int a = console.nextInt();

        if (a<0) {
            System.out.println("true");
            System.out.println();
            return true;

        } else {
            System.out.println("false");
            System.out.println();
            return false;
        }
    }

    public static void manyLine()
    {
        System.out.println("Метод должен отпечатать в консоль указанную строку, указанное количество раз");
        Scanner console = new Scanner(System.in);
        String Line = console.nextLine();
        int n = console.nextInt();

        for (int i = 0; i < n; i++){
            System.out.println(Line);
            System.out.println();
        }
    }

    public static boolean isLeapYear()
    {
        System.out.println("Является ли год високосным");
        int year = 400;
        if (year % 4 == 0) {
            if (year % 100 == 0) {
                if (year % 400 == 0){
                    System.out.println("true");
                    System.out.println();
                    return true;
                } else {
                    System.out.println("false");
                    System.out.println();
                    return false;
                }
            } else {
                System.out.println("true");
                System.out.println();
                return true;
            }
        } else {
            System.out.println("false");
            System.out.println();
            return false;
        }
    }
    public static void reverse()
    {
        System.out.println("Заменить 0 на 1, 1 на 0");
        int[] num = new int[] {0,1,1,1,0,0,1,0,1};
        int l = num.length;
        for (int i = 0; i < l; i++){
            if (num[i] == 0){
                num[i] = 1;
            } else {
                num[i] = 0;
            }
        }
        System.out.println(Arrays.toString(num));
        System.out.println();
    }

    public static void fill()
    {
        System.out.println("Заполнение массива от 1 до 100");
        int[] num = new int[100];
        for (int i = 0; i < 100; i++){
            num[i] = i+1;
        }
        System.out.println(Arrays.toString(num));
        System.out.println();
    }

    public static void multiplication()
    {
        System.out.println("множить на 2 все числа в массиве меньше 6");
        int[] num = new int[] {1, 5, 3, 2, 11, 4, 5, 2, 4, 8, 9, 1};
        int l = num.length;
        for (int i = 0; i < l; i++){
            if (num[i] < 6){
                num[i] = num[i] * 2;
            }
        }
        System.out.println(Arrays.toString(num));
        System.out.println();
    }

    public static void matrix()
    {
        System.out.println("Двумерный массив");
        int[][] TwoArray = new int [10][10];
        for (int i = 0; i < 10; i++){
            TwoArray[i][i] = 1;
        }
        for (int i = 0; i < 10; i++){
            TwoArray[9-i][i] = 1;
        }
        for (int i = 0; i < 10; i++) {
            for (int j = 0; j < 10; j++) {
                System.out.print(TwoArray[i][j] + "\t");
            }
            System.out.println();
        }
    }

    public static void myArray()
    {
        System.out.println("одномерный массив типа int длиной len, каждая ячейка которого равна initialValue");
        Scanner console = new Scanner(System.in);
        int len = console.nextInt();
        int initialValue = console.nextInt();
        int[] num = new int[len];
        for (int i = 0; i < len; i++){
            num[i] = initialValue;
        }
        System.out.println(Arrays.toString(num));
        System.out.println();
    }
}
